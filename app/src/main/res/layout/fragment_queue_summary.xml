<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_queue_summary"
    android:layout_marginRight="@dimen/margin_queue_summary"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:gravity="center">

    <Button
        android:id="@+id/take_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/take_student"
        android:textColor="@color/q_dark"
        android:background="@color/q_light"
        android:shadowColor="@color/q_primary"/>

    <Button
        android:id="@+id/leave_queue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/leave_queue"
        android:textColor="@color/q_dark"
        android:background="@color/q_light"
        android:shadowColor="@color/q_primary"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/graph"/>


</LinearLayout>